<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackathon.gridlock.liftthyneighbour">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminHomeActivity"
            android:label="@string/admin_home_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PendingApprovals"
            android:label="Pending Approvals"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TenantList"
            android:label="Tenant List"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TenantDetails"
            android:label="Tenant Details"
            android:screenOrientation="portrait" />
        <activity android:name=".PendingApprovalDetails"
            android:label="Approval Details"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>