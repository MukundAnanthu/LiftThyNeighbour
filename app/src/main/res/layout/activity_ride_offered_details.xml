<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.hackathon.gridlock.liftthyneighbour.RideOfferedDetails"
    >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvRODSourceNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Source:"
                android:layout_marginTop="7dp"
                />

            <TextView
                android:id="@+id/tvRODSourceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRODSourceNameLabel"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                />

            <TextView
            android:id="@+id/tvRODDestNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Destination:"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tvRODSourceName"
            />

            <TextView
                android:id="@+id/tvRODDestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRODDestNameLabel"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tvRODPickUpTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Departure:"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/tvRODDestName"
                />

            <TextView
                android:id="@+id/tvRODPickUpTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRODPickUpTimeLabel"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tvRODNumPassengersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Number of Passengers:"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/tvRODPickUpTime"
                />

            <TextView
                android:id="@+id/tvRODNumPassengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRODNumPassengersLabel"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                />


        </RelativeLayout>

    </HorizontalScrollView>

</ScrollView>
